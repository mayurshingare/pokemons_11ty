<!doctype html>

<html lang="en">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
        crossorigin="anonymous"></script>
    <link href="{{ '/style.css' | url }}" rel="stylesheet">
</head>
<nav class="navbar bg-dark ">
    <div class="container-fluid">
        <a class="navbar-brand text-white" href="{{ '/' | url }}">PokeDex</a>
    </div>
</nav>

<body class="text-white bg-dark">
    {% if pagination.href.previous %}
    <div id="previousButton">
        <a class="" href="{{ pagination.href.previous | url }}" aria-label="Previous">
            <span class="carousel-control-prev-icon"></span>
        </a>
    </div>
    {% endif %}
    {% if pagination.href.next %}
    <div id="nextButton">
        <a class="" href="{{ pagination.href.next | url }}" aria-label="Next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>
    {% endif %}
    {{content}}
</body>

</html>